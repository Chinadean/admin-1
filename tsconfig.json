{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@hooks": ["src/hooks"],
      "@lib": ["src/lib"],
      "@pages": ["src/pages"],
      "@theme": ["src/theme"],
      "@store": ["src/store"]
    }
  },
  "include": ["src", "types/strapi.d.ts"]
}
